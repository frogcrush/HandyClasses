<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Version>1.0.3-alpha</Version>
    <Authors>Tylor Pater</Authors>
    <Product>TylorsTech.HandyClasses</Product>
    <Description>Base package containing commonly used C# classes, all in one convenient package!</Description>
    <Copyright>(C) 2020 Tylor Pater</Copyright>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <PackageProjectUrl>https://github.com/frogcrush/HandyClasses</PackageProjectUrl>
    <RepositoryUrl>https://github.com/frogcrush/HandyClasses</RepositoryUrl>
    <RepositoryType>GitHub</RepositoryType>
    <PackageReleaseNotes>Make ObservableRangeCollection inherit from IObservableRangeCollection, which allows you to use Dependancy Injection to allow you to use either WpfObservableRangeCollection from HandyClasses.WPF, or the normal ObservableRangeCollection for other .NET platforms.</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <None Include="LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
